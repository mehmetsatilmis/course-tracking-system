<p id="notice"><%= notice %></p>

<h1>Listing Pivot Tbls</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pivot_tbls.each do |pivot_tbl| %>
      <tr>
        <td><%= link_to 'Show', pivot_tbl %></td>
        <td><%= link_to 'Edit', edit_pivot_tbl_path(pivot_tbl) %></td>
        <td><%= link_to 'Destroy', pivot_tbl, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

